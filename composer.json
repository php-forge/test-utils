{
    "name": "forge/test-utils",
    "type": "library",
    "description": "Conjunto de clases auxiliares para utilizar en pruebas unitarias.",
    "keywords": [
        "forge",
        "test",
        "utils"
    ],
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "roave/infection-static-analysis-plugin": "*",
        "vimeo/psalm": "*"
    },
    "autoload": {
        "psr-4": {
            "Forge\\TestUtils\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Forge\\TestUtils\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
